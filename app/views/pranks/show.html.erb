<div class="container">
  <div class="card-prank">
    <ul>
      <li><%= @prank.name %></li>
      <li><%= @prank.content %></li>
      <li><%= @prank.price %></li>
    </ul>
  </div>
  <div class="form-booking">
    <%= simple_form_for [@prank, @booking] do |f| %>
      <%= f.input :date, html5: true, :input_html => { :value => Date.today} %>
      <%= f.input :description, placeholder: 'special instructions', inline_label: 'description' %>
      <%= f.submit class: 'btn btn-flat border border-dark mb-3 mt-3' %>
    <% end %>
  </div>
  <%= link_to 'Go back', pranks_path %>
</div>
