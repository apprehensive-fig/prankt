<body>
<div class="container-prank bg-white d-flex flex-wrap align-items-center">
  <div class="top d-flex flex-column justify-content-center mb-5">
      <h2><%= @prank.name %></h2>
      <img src="https://res.cloudinary.com/dzwpbkn3u/image/upload/v1621747327/homeless-chic_n3ntvs.png">

    </div>
    <div class="bottom d-flex justify-content-center mt-3 flex-wrap">
      <div class="info text-center border border-dark p-3" style="width: 500px">
      <p><%= @prank.price %> yen</p>
      <p><%= @prank.content %></p>
    </div>
      <div class="form bg-gray d-flex justify-content-center align-items-center p-3 border border-dark">
    <%= simple_form_for [@prank, @booking] do |f| %>
      <%= f.input :date, html5: true, :input_html => { :value => Date.today} %>
      <%= f.input :description, placeholder: 'special instructions', inline_label: 'description' %>
      <%= f.submit class: 'btn btn-flat mb-3 mt-3' %>
    <% end %>
</div>

  </div>
    <div class="d-flex justify-content-center mt-5">
      <%= link_to 'Go back', pranks_path, class: 'btn btn-flat mb-3 mt-3 w-10' %>
    </div>
  </div>
</body>
